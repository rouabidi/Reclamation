@model RapportDto
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Rapport</h2>


        <form method="post" enctype="multipart/form-data">
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["RapportID"]">
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Date du Rapport</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DateRapport" type="date">
                    <span asp-validation-for="DateRapport" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Total Tickets Vendus</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="TotalTicketsVendus" type="number">
                    <span asp-validation-for="TotalTicketsVendus" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Revenus Totaux</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="RevenusTotaux" type="number" step="0.01">
                    <span asp-validation-for="RevenusTotaux" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Responsable</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Responsable" type="text">
                    <span asp-validation-for="Responsable" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Conteneur pour afficher l'image associée au rapport -->
                <div class="offset-sm-4 col-sm-8">
                    <!-- Image affichée depuis le dossier 'rapports' avec le nom du fichier provenant de ViewData -->
                    <img src="/rapports/@ViewData["ImageFileName"]" width="150" />
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Fichier Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile" type="file">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Date du Rapport</label>
                <div class="col-sm-8">
                    <!-- Affichage en lecture seule de la date du rapport, déjà formatée -->
                    <input class="form-control-plaintext" readonly value="@ViewData["DateRapport"]">
                </div>
            </div>




            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Rapports" asp-action="Index" role="button">
                        Annuler
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
